<?xml version="1.0" encoding="utf-8"?>
<!--  a single row item for a Stacks listview -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >
    
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1" >
    
        <TextView
            android:id="@+id/listitem_name"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical" />
        
        <TextView
            android:id="@+id/listitem_plans"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="[getView fills me]" />
    </LinearLayout>
        
    <TextView
        android:id="@+id/listitem_actionable_items"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center" />
    
    <ImageView
        android:id="@+id/listitem_more"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="More options for this list item" />
    
</LinearLayout>