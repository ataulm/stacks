<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:padding="@dimen/gutter">

  <com.ataulm.stacks.view.StacksTextView
    android:id="@+id/textview_label_summary"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="@string/summary"
    app:customFont="robotoSlab" />

  <com.ataulm.stacks.view.StacksEditText
    android:id="@+id/edittext_summary"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/textview_label_summary"
    android:inputType="text"
    android:hint="@string/stack_summary"
    app:customFont="robotoLight" />

  <com.ataulm.stacks.view.StacksTextView
    android:id="@+id/textview_label_description"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/edittext_summary"
    android:layout_marginTop="@dimen/gutter"
    android:text="@string/description"
    app:customFont="robotoSlab" />

  <com.ataulm.stacks.view.StacksEditText
    android:id="@+id/edittext_description"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/textview_label_description"
    android:hint="@string/more_details"
    app:customFont="robotoLight" />

</RelativeLayout>
