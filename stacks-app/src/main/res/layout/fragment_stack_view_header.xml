<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="48dp"
        >

    <!-- ShortCode -->
    <TextView
            android:id="@+id/short_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textIsSelectable="false"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            />

    <!-- Notes/description -->
    <TextView
            android:id="@+id/notes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/short_code"
            android:maxLines="@integer/notes_line_height"
            android:ellipsize="end"
            android:text="@string/lorem_paragraph"
            android:layout_marginBottom="16dp"
            />

    <ImageView
            android:id="@+id/show_more_indicator"
            android:src="@drawable/ic_menu_expander_minimized_black"
            android:alpha="0.4"
            android:layout_below="@id/notes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            />

    <ImageView
            android:id="@+id/show_less_indicator"
            android:src="@drawable/ic_menu_expander_maximized_black"
            android:alpha="0.4"
            android:layout_below="@id/notes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:visibility="invisible"
            />


</RelativeLayout>